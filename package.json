{
  "name": "typescript-template",
  "version": "0.0.1",
  "description": "My personal typescript project template",
  "main": "build/index.js",
  "scripts": {
    "test": "ava",
    "build": "tsc -p tsconfig.release.json",
    "lint": "eslint src/**/*.ts",
    "dev": "nodemon",
    "debug": "nodemon --config nodemon.debug.json",
    "start": "forever build/index.js"
  },
  "ava": {
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "tap": true,
    "verbose": true
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^2.34.0",
    "ava": "^3.13.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-plugin-prettier": "^3.1.4",
    "nodemon": "^2.0.5",
    "prettier": "^2.1.2"
  }
}
